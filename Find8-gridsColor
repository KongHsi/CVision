#include "stdlib.h"
#include "iostream"
#include <opencv2/opencv.hpp>
#include <opencv2/core/core.hpp>
#include <opencv2/highgui/highgui.hpp>

using namespace std;
using namespace cv;

int findDis(Vec3b color, Vec3b target);
void findColor(const Mat &image,Mat &result, Vec3b &target);
void findEndPoints(const Mat &image, int* result);
void combineImgs(const Mat &image, Mat &result);
void erodeImg(Mat &image);
void dilateImg(Mat &image);
void findRegionColor(Mat& result,int color,int regions[]);
void findRegionColorMain();
int main (int argc,char** argv){
	 findRegionColorMain();
	 system("pause");
	return 0;
}
 
void findColor(const Mat &image,Mat &result, Vec3b &target){
	

	for(int i=0;i<image.rows;i++){
		for(int j=0;j<image.cols;j++){
			if(findDis(image.at<Vec3b>(i,j), target)<220){
				result.at<uchar>(i,j)=0;
				
			}else{
				result.at<uchar>(i,j)=255;
			}
		}
	}
}
int findDis(Vec3b color, Vec3b target){
	return abs(color[0]-target[0])+abs(color[1]-target[1])+abs(color[2]-target[2]);
}
void findEndPoints(const Mat &image, int* result){
	int count=0, x=0, y=0;
	
	for(int i=0;i<image.rows;i++){
		for(int j=0;j<image.cols;j++){
			if(image.at<uchar>(i,j)==0){
				count++;
				x+=j;
				y+=i;
			}
		}
	}
	if(count==0)return;
	result[0] = x/count;
	result[1] = y/count;

}
void combineImgs(const Mat &image, Mat &result){
	Mat mix(image.rows,image.cols,CV_8UC3);
	vector<Mat> planes;
	split(image,planes);
	planes[0]+=result*0.3;
	planes[1]+=result*0.3;
	planes[2]+=result*0.3;
	merge(planes,image);
}
void erodeImg(Mat &image){
	erode(image,image,Mat());
}
void dilateImg(Mat &image){
	dilate(image,image,Mat());
}

void findRegionColorMain(){
		int regions[8] = {0};
		for(int colorID = 1;colorID<=4;colorID++){
			Mat image = imread("1.jpg");
			if(!image.data)system("pause");
			Mat result(image.rows,image.cols,CV_8UC1);
			image.copyTo(result);
			cvtColor(result,result, COLOR_BGR2GRAY);
			Vec3b vec;
			switch(colorID){
				case 1:vec=Vec3b(250,0,0);break;
				case 2:vec=Vec3b(0,0,250);break;
				case 3:vec=Vec3b(0,0,250);break;
				case 4:vec=Vec3b(0,0,250);break;
			}
		findColor(image,result,vec);
		dilateImg(result);dilateImg(result);
		erodeImg(result);erodeImg(result);
		findRegionColor(result,colorID,regions);
		waitKey(1);
		}
		for(int i=0;i<8;i++){
			cout<<regions[i]<<endl;}
		
}

void findRegionColor(Mat& result,int color,int regions[]){
	for(int i=0;i<8;i++){
		switch(i){
			case 0: 
				for(int i=0;i<result.rows/5;i++){
					for(int j=0;j<result.cols/5;j++){
						if(result.at<uchar>(i,j)==0){
							regions[i] = color;break;}
					}}break;
			case 1: 
				for(int i=0;i<result.rows/5;i++){
					for(int j=2*result.cols/5;j<3*result.cols/5;j++){
						if(result.at<uchar>(i,j)==0){
							regions[i] = color;break;}
					}}break;
			case 2: 
				for(int i=0;i<result.rows/5;i++){
					for(int j=4*result.cols/5;j<result.cols;j++){
						if(result.at<uchar>(i,j)==0){
							regions[i] = color;break;}
					}}break;
			case 3: 
				for(int i=2*result.rows/5;i<3*result.rows/5;i++){
					for(int j=0;j<result.cols/5;j++){
						if(result.at<uchar>(i,j)==0){
							regions[i] = color;break;}
					}}break;
			case 4: 
				for(int i=2*result.rows/5;i<3*result.rows/5;i++){
					for(int j=4*result.cols/5;j<result.cols;j++){
						if(result.at<uchar>(i,j)==0){
							regions[i] = color;break;}
					}}break;
			case 5: 
				for(int i=4*result.rows/5;i<result.rows;i++){
					for(int j=0;j<2*result.cols;j++){
						if(result.at<uchar>(i,j)==0){
							regions[i] = color;break;}
					}}break;
			case 6: 
				for(int i=4*result.rows/5;i<result.rows;i++){
					for(int j=2*result.cols/5;j<3*result.cols/5;j++){
						if(result.at<uchar>(i,j)==0){
							regions[i] = color;break;}
					}}break;
			case 7: 
				for(int i=4*result.rows/5;i<result.rows;i++){
					for(int j=4*result.cols/5;j<result.cols;j++){
						if(result.at<uchar>(i,j)==0){
							regions[i] = color;break;}
					}}break;
		}
	}
}
